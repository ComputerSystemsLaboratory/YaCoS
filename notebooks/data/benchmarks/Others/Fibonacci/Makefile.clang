#
# TARGET
#

TARGET = a.out

#
# VARIABLES
#

# Compiler
CC = clang

# Compile-time flags
CFLAGS = -w

# Includes
INCLUDES = 

# Library paths
LFLAGS = 

# Linker flags
LIBS = -lm

# Source files
SRCS = $(wildcard *.c)

# Object file
OBJS = $(SRCS:.c=.o)

#
# BUILD
#

.PHONY: depend clean

all:    $(TARGET)

$(TARGET): $(OBJS)
	@$(CC) -o $(TARGET) $(OBJS) $(LFLAGS) $(LIBS)

%.o: %.c
	@$(CC) $(PASSES) $(CFLAGS) $(INCLUDES) -c $< -o $@

#
# CLEAN
#

clean:
	@$(RM) -f *.o *~ *.yaml diff.txt output.txt output.all runtime.csv error.log

cleanup:
	@$(RM) -f *.o *~ *.yaml $(TARGET) diff.txt output.txt output.all runtime.csv error.log

#
# DEPEND
#
depend: $(SRCS)
	@makedepend $(INCLUDES) $^
